<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>

<BorderPane fx:id="borderPane" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.easyquiz.controller.TeacherMainController"
            prefHeight="600" prefWidth="800">
    <left>
        <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #f0f0f0;">
            <Button text="Home" onAction="#showHome" prefWidth="100"/>
            <Button text="Library" onAction="#showLibrary" prefWidth="100"/>
            <Button text="Class" onAction="#showClass" prefWidth="100"/>
            <Pane VBox.vgrow="ALWAYS" />
            <Button text="Logout" onAction="#handleLogout" prefWidth="100"/>
        </VBox>
    </left>
    <center>
        
    </center>
</BorderPane>
