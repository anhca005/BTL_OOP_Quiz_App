<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>

<?import java.net.URL?>

<ScrollPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.easyquiz.controller.StudentQuizController"
            fitToWidth="true"
            pannable="true"
            vbarPolicy="AS_NEEDED"
            hbarPolicy="NEVER">

    <stylesheets>
        <URL value="@student_quiz.css" />
    </stylesheets>

    <VBox alignment="CENTER"
          spacing="10"
          style="-fx-padding: 20;"
          prefWidth="500">

        <Label text="Làm bài trắc nghiệm"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <HBox spacing="10" alignment="CENTER">
            <Label text="Nhập Quiz ID:"/>
            <TextField fx:id="quizIdField" promptText="Ví dụ: 1" HBox.hgrow="ALWAYS"/>
            <Button fx:id="startButton" text="Bắt đầu" onAction="#handleStartQuiz"/>
        </HBox>

        <!-- Hiển thị quiz ID sau khi bắt đầu -->
        <Label fx:id="quizInfoLabel" text="" style="-fx-font-size: 14px; -fx-text-fill: gray;"/>

        <Separator/>

        <Label fx:id="questionLabel"
               text="Câu hỏi sẽ hiển thị ở đây"
               wrapText="true"
               style="-fx-font-size: 14px;"
               maxWidth="Infinity"/>

        <VBox fx:id="optionsBox"
              spacing="5"
              prefWidth="Infinity"/>

        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="nextButton" text="Tiếp theo" onAction="#handleNext" disable="true"/>
            <Button text="Quay lại" onAction="#handleBack"/>
        </HBox>
    </VBox>
</ScrollPane>
