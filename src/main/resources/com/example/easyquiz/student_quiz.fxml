<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.easyquiz.controller.StudentQuizController" prefHeight="600.0" prefWidth="800.0">
    <stylesheets>
        <URL value="@student_quiz.css" />
    </stylesheets>
    <top>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 15;">
            <children>
                <Label text="Làm bài trắc nghiệm" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                <HBox spacing="10" alignment="CENTER">
                    <Label text="Nhập Quiz ID:" />
                    <TextField fx:id="quizIdField" promptText="Ví dụ: 12345678901" HBox.hgrow="ALWAYS" />
                    <Button fx:id="startButton" onAction="#handleStartQuiz" text="Bắt đầu" />
                    <Button onAction="#handleBackToHome" text="Quay lại" />
                </HBox>
                <HBox alignment="CENTER_LEFT" prefWidth="200.0">
                    <children>
                        <Label fx:id="quizInfoLabel" style="-fx-font-size: 14px; -fx-text-fill: gray;" text="" />
                        <Pane HBox.hgrow="ALWAYS" />
                        <Label fx:id="timerLabel" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #d32f2f;" text="10:00" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>
    <center>
        <VBox fx:id="quizContentPane" alignment="TOP_LEFT" spacing="20" style="-fx-padding: 20;" visible="false">
            <children>
                <Label fx:id="questionLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Câu hỏi sẽ hiển thị ở đây" wrapText="true" />
                <VBox fx:id="optionsBox" spacing="10" prefWidth="Infinity" />
            </children>
        </VBox>
    </center>
    <bottom>
        <VBox fx:id="navigationPane" alignment="CENTER" spacing="15" style="-fx-padding: 15; -fx-border-color: #cccccc; -fx-border-width: 1 0 0 0;" visible="false">
            <children>
                <HBox alignment="CENTER" spacing="10">
                    <Button fx:id="prevButton" onAction="#handlePrev" text="&lt; Câu trước" />
                    <Button fx:id="submitButton" onAction="#handleSubmitEarly" styleClass="delete-btn" text="Nộp bài sớm" />
                    <Button fx:id="nextButton" onAction="#handleNext" text="Câu sau &gt;" />
                </HBox>
                <Separator />
                <FlowPane fx:id="questionNavPane" alignment="CENTER" hgap="5" vgap="5" prefWrapLength="750.0" />
            </children>
        </VBox>
    </bottom>
</BorderPane>
