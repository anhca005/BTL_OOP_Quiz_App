<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.easyquiz.controller.TeacherQuestionController"
      spacing="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Tiêu đề -->
    <Label text="Quản lý Câu hỏi" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <!-- Quản lý bộ câu hỏi -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Bộ câu hỏi:"/>
        <ComboBox fx:id="quizComboBox" promptText="Chọn bộ câu hỏi..." prefWidth="200"/>
        <Button text="Copy ID" onAction="#handleCopyQuizId"/>
        <TextField fx:id="setNameField" promptText="Tên bộ mới..." prefWidth="180"/>
        <Label text="Thời gian (phút):"/>
        <Spinner fx:id="durationSpinner" initialValue="10" max="180" min="1" prefWidth="80"/>
        <Button text="Tạo mới" onAction="#handleSaveQuestionSet"/>
    </HBox>

    <!-- Bảng hiển thị câu hỏi -->
    <TableView fx:id="questionTable" prefHeight="220">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
            <TableColumn fx:id="questionColumn" text="Câu hỏi" prefWidth="350"/>
            <TableColumn fx:id="correctColumn" text="Đáp án đúng" prefWidth="150"/>
        </columns>
    </TableView>

    <Separator/>

    <!-- Nhập câu hỏi mới -->
    <GridPane hgap="10" vgap="8">
        <Label text="Câu hỏi:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="questionField" GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.columnSpan="3" promptText="Nhập nội dung câu hỏi..."/>

        <Label text="A:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <HBox alignment="CENTER_LEFT" spacing="5" GridPane.rowIndex="1" GridPane.columnIndex="1">
            <TextField fx:id="option1Field" HBox.hgrow="ALWAYS"/>
            <CheckBox fx:id="correctOptionA" text="Đúng"/>
        </HBox>

        <Label text="B:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
        <HBox alignment="CENTER_LEFT" spacing="5" GridPane.rowIndex="1" GridPane.columnIndex="3">
            <TextField fx:id="option2Field" HBox.hgrow="ALWAYS"/>
            <CheckBox fx:id="correctOptionB" text="Đúng"/>
        </HBox>

        <Label text="C:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <HBox alignment="CENTER_LEFT" spacing="5" GridPane.rowIndex="2" GridPane.columnIndex="1">
            <TextField fx:id="option3Field" HBox.hgrow="ALWAYS"/>
            <CheckBox fx:id="correctOptionC" text="Đúng"/>
        </HBox>

        <Label text="D:" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
        <HBox alignment="CENTER_LEFT" spacing="5" GridPane.rowIndex="2" GridPane.columnIndex="3">
            <TextField fx:id="option4Field" HBox.hgrow="ALWAYS"/>
            <CheckBox fx:id="correctOptionD" text="Đúng"/>
        </HBox>
    </GridPane>

    <!-- Nút thao tác -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="Thêm" onAction="#handleAddQuestion"/>
        <Button text="Sửa" onAction="#handleEditQuestion"/>
        <Button text="Xóa" onAction="#handleDeleteQuestion"/>
        <Button text="Quay lại" onAction="#handleBack"/>
    </HBox>

</VBox>
