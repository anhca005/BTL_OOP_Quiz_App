<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.easyquiz.controller.StudentHistoryController"
      alignment="TOP_CENTER" spacing="15"
      stylesheets="@styles/student_history.css"
      styleClass="root">

    <Label text="Lịch sử làm bài" styleClass="title"/>

    <TableView fx:id="resultTable">
        <columns>
            <TableColumn fx:id="quizColumn" text="Tên quiz" prefWidth="300"/>
            <TableColumn fx:id="scoreColumn" text="Điểm" prefWidth="200"/>
            <TableColumn fx:id="timeColumn" text="Thời gian nộp" prefWidth="300"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER">
    </HBox>

</VBox>
