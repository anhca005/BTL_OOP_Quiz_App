<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.easyquiz.controller.RegisterController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Đăng ký tài khoản" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TextField fx:id="nameField" promptText="Họ và tên"/>
    <TextField fx:id="emailField" promptText="Email"/>
    <PasswordField fx:id="passwordField" promptText="Mật khẩu"/>
    <PasswordField fx:id="confirmPasswordField" promptText="Xác nhận mật khẩu"/>
    <ChoiceBox fx:id="roleChoiceBox" prefWidth="200"/>
    <TextField fx:id="studentCodeField" promptText="Mã sinh viên (nếu là học sinh)"/>
    <TextField fx:id="classField" promptText="Tên lớp học (nếu là học sinh)"/>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="registerBtn" text="Đăng ký"/>
        <Button fx:id="backBtn" text="Quay lại"/>
    </HBox>
</VBox>
