<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane 
   prefHeight="600.0" 
   prefWidth="900.0" 
   xmlns="http://javafx.com/javafx/17" 
   xmlns:fx="http://javafx.com/fxml/1" 
   fx:controller="com.example.easyquiz.controller.TeacherClassManagementController"
   stylesheets="@styles/teacher_class_management.css">
   <children>
      <VBox alignment="TOP_CENTER" layoutX="10.0" layoutY="10.0" prefHeight="600.0" prefWidth="900.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <!-- Tiêu đề -->
            <Region prefHeight="80"/>
            <Label text="Các lớp học của bạn" styleClass="title-label"/>
            <Label text="Nơi bạn có thể xem tất cả các lớp học đã tạo." styleClass="sub-title"/>
            <Region prefHeight="100"/>
            <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="200.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleAddClass" styleClass="create-btn" text="Thêm Lớp học">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </HBox>
            <TableView fx:id="classTable" prefHeight="450.0" prefWidth="860.0">
              <columns>
                <TableColumn fx:id="colClassName" prefWidth="300.0" text="Tên Lớp học" />
                <TableColumn fx:id="colTeacher" prefWidth="300.0" text="Giáo viên" />
                  <TableColumn fx:id="colActions" prefWidth="250.0" text="Hành động" />
              </columns>
               <VBox.margin>
                  <Insets left="20.0" right="20.0" />
               </VBox.margin>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>